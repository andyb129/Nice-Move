            </intent-filter>
        </activity>
        
        <activity android:name=".HouseDetails">
            <intent-filter>
                <action android:name="uk.co.barbuzz.HouseDetails" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".HouseNotes">
            <intent-filter>
                <action android:name="uk.co.barbuzz.HouseNotes" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".HousePhotos">
            <intent-filter>
                <action android:name="uk.co.barbuzz.HousePhotos" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
