        <activity android:name=".HouseRating">
            <intent-filter>
                <action android:name="uk.co.barbuzz.HouseRating" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>       
    
</manifest>